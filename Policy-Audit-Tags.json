{
  "properties": {
    "displayName": "requiretagsonresources",
    "policyType": "Custom",
    "mode": "Indexed",
    "description": "This policy audits resources missing required Cost Transparency tags.",
    "metadata": {
      "category": "Tags",
      "createdBy": "0a7b4841-a8d9-4e80-9114-144b884d9f83",
      "createdOn": "2025-12-02T05:08:08.6032125Z",
      "updatedBy": null,
      "updatedOn": null
    },
    "version": "1.0.0",
    "parameters": {
      "tagName1": {
        "type": "String",
        "metadata": {
          "displayName": "Tag Name 1",
          "description": "Name of first tag, such as 'Workload name'"
        }
      },
      "tagName2": {
        "type": "String",
        "metadata": {
          "displayName": "Tag Name 2",
          "description": "Name of second tag, such as 'Business unit'"
        }
      },
      "tagName3": {
        "type": "String",
        "metadata": {
          "displayName": "Tag Name 3",
          "description": "Name of third tag, such as 'Budget required/approved'"
        }
      },
      "tagName4": {
        "type": "String",
        "metadata": {
          "displayName": "Tag Name 4",
          "description": "Name of fourth tag, such as 'Cost center'"
        }
      },
      "tagName5": {
        "type": "String",
        "metadata": {
          "displayName": "Tag Name 5",
          "description": "Name of fifth tag, such as 'Environment'"
        }
      }
    },
    "policyRule": {
      "if": {
        "anyOf": [
          {
            "field": "[concat('tags[', parameters('tagName1'), ']')]",
            "exists": false
          },
          {
            "field": "[concat('tags[', parameters('tagName2'), ']')]",
            "exists": false
          },
          {
            "field": "[concat('tags[', parameters('tagName3'), ']')]",
            "exists": false
          },
          {
            "field": "[concat('tags[', parameters('tagName4'), ']')]",
            "exists": false
          },
          {
            "field": "[concat('tags[', parameters('tagName5'), ']')]",
            "exists": false
          }
        ]
      },
      "then": {
        "effect": "audit"
      }
    },
    "versions": [
      "1.0.0"
    ]
  },
