{
  "displayName": "Enforce Azure Hybrid Benefit for SQL",
  "policyType": "Custom",
  "mode": "Indexed",
  "description": "This policy enforces the use of Azure Hybrid Benefit (AHUB) for SQL IaaS Virtual Machines.",
  "policyRule": {
    "if": {
      "allOf": [
        {
          "field": "type",
          "equals": "Microsoft.SqlVirtualMachine/sqlVirtualMachines"
        },
        {
          "field": "Microsoft.SqlVirtualMachine/SqlVirtualMachines/sqlImageSku",
          "in": [
            "Standard",
            "Enterprise"
          ]
        },
        {
          "field": "Microsoft.SqlVirtualMachine/SqlVirtualMachines/sqlServerLicenseType",
          "notEquals": "AHUB"
        }
      ]
    },
    "then": {
      "effect": "deny"
    }
  }
}
