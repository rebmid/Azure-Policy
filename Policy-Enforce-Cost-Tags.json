{
  "displayName": "Enforce - Cost Tags",
  "policyType": "Custom",
  "mode": "Indexed",
  "metadata": {
    "description": "Enforces required cost-related tags. Does not apply to resource groups."
  },
  "parameters": {
    "tagName1": {
      "type": "String",
      "metadata": {
        "displayName": "Workload name"
      }
    },
    "tagName2": {
      "type": "String",
      "metadata": {
        "displayName": "Business Unit"
      }
    },
    "tagName3": {
      "type": "String",
      "metadata": {
        "displayName": "Budget required"
      }
    },
    "tagName4": {
      "type": "String",
      "metadata": {
        "displayName": "Cost Center"
      }
    },
    "tagName5": {
      "type": "String",
      "metadata": {
        "displayName": "Environment"
      }
    }
  },
  "policyRule": {
    "if": {
      "anyOf": [
        {
          "field": "[concat('tags[', parameters('tagName1'), ']')]",
          "exists": false
        },
        {
          "field": "[concat('tags[', parameters('tagName2'), ']')]",
          "exists": false
        },
        {
          "field": "[concat('tags[', parameters('tagName3'), ']')]",
          "exists": false
        },
        {
          "field": "[concat('tags[', parameters('tagName4'), ']')]",
          "exists": false
        },
        {
          "field": "[concat('tags[', parameters('tagName5'), ']')]",
          "exists": false
        }
      ]
    },
    "then": {
      "effect": "deny"
    }
  }
}
